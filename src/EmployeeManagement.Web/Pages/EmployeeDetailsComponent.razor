@page "/employeedetails/{id}"
@page "/employeedetails"
@inherits EmployeeDetailsComponent_Base


@if (Employee is null)
{
    <div class="spinner"></div>
}
else
{

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Employee.FirstName @Employee.LastName | @Coordinates</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath" @onmousemove="Mouse_Move" />

                    <h4>Employee ID : @Employee.EmployeeId</h4>
                    <h4>Email : @Employee.Email</h4>
                    <h4>Department : @( Employee.Department==null?"N/A" : Employee.Department.DepartmentName)</h4>
                    <button class="btn btn-primary" @onclick="ButtonClick_Fn">@ButtonText</button>
                </div>
                <div class="card-footer text-center @ButtonCssClass" @onmousemove="@(x=> Coordinates = $"x=> {x.ClientX} y=> {x.ClientY}")">

                    <a href="/" class="btn btn-primary">Back</a>
                    <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>

                </div>
            </div>
        </div>
    </div>
}

