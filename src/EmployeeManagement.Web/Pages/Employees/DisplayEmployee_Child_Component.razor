@inherits DisplayEmployee_Child_Component_Base

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <h3>
            <input type="checkbox" @onchange="CheckBoxChanged" />
        @ChildEmployee.FirstName @ChildEmployee.LastName
        </h3>
    </div>
    <img class="card-img-top" src="@ChildEmployee.PhotoPath" />
    @if (ChildShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{ChildEmployee.EmployeeId}")"
               class="btn btn-primary m-1">View</a>

            <a href="@($"editemployee/{ChildEmployee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }
</div>
